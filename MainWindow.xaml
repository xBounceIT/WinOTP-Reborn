<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinOTP.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinOTP"
    Title="WinOTP - Reborn">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <TextBlock
                Text="WinOTP - Reborn"
                Style="{StaticResource TitleTextBlockStyle}"
                VerticalAlignment="Center" />
        </Grid>

        <!-- OTP List Area -->
        <Grid Grid.Row="1" Padding="16,8">
            <ListView x:Name="OtpListView" SelectionMode="None" />

            <!-- Empty state -->
            <StackPanel
                x:Name="EmptyStatePanel"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="8">
                <FontIcon
                    Glyph="&#xE8D7;"
                    FontSize="48"
                    HorizontalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock
                    Text="No OTP entries yet"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    HorizontalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock
                    Text="Click the + button below to add your first account"
                    Style="{StaticResource BodyTextBlockStyle}"
                    HorizontalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
            </StackPanel>
        </Grid>

        <!-- Bottom Command Bar -->
        <CommandBar Grid.Row="2" DefaultLabelPosition="Right">
            <AppBarButton
                x:Name="AddButton"
                Icon="Add"
                Label="Add Account"
                Click="AddButton_Click" />
        </CommandBar>
    </Grid>

</Window>
