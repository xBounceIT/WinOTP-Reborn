<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinOTP.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinOTP.Models">

    <Page.Resources>
        <x:Double x:Key="CardColumnWidth">360</x:Double>

        <Storyboard x:Name="NextCodeFadeInAnimation">
            <DoubleAnimation Storyboard.TargetName="NextCodeTextBlock"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Name="NextCodeFadeOutAnimation">
            <DoubleAnimation Storyboard.TargetName="NextCodeTextBlock"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Grid Padding="16,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search, Sort and Add controls -->
        <Grid Grid.Row="0"
              Margin="4,0,4,8"
              Width="{StaticResource CardColumnWidth}"
              HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search bar -->
            <AutoSuggestBox x:Name="SearchBox"
                            Grid.Column="0"
                            PlaceholderText="Search accounts..."
                            QueryIcon="Find"
                            TextChanged="SearchBox_TextChanged"
                            QuerySubmitted="SearchBox_QuerySubmitted"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            MinHeight="30"/>

            <!-- Sort and Add buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <DropDownButton ToolTipService.ToolTip="Sort accounts" MinHeight="32">
                    <FontIcon Glyph="&#xE8CB;" FontSize="14"/>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedRight">
                            <RadioMenuFlyoutItem x:Name="SortNewestFirst" Text="Date Added (Newest)" GroupName="SortGroup" IsChecked="True" Click="SortMenuItem_Click" Tag="0"/>
                            <RadioMenuFlyoutItem x:Name="SortOldestFirst" Text="Date Added (Oldest)" GroupName="SortGroup" Click="SortMenuItem_Click" Tag="1"/>
                            <RadioMenuFlyoutItem x:Name="SortNameAsc" Text="Name (A → Z)" GroupName="SortGroup" Click="SortMenuItem_Click" Tag="2"/>
                            <RadioMenuFlyoutItem x:Name="SortNameDesc" Text="Name (Z → A)" GroupName="SortGroup" Click="SortMenuItem_Click" Tag="3"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <Button x:Name="AddButton" Click="AddButton_Click" ToolTipService.ToolTip="Add account" MinHeight="32">
                    <FontIcon Glyph="&#xE710;" FontSize="14"/>
                </Button>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Spacing="8" Margin="0,0,0,8">
            <InfoBar
                x:Name="LoadIssuesInfoBar"
                IsOpen="False"
                IsClosable="True"
                Severity="Warning"
                Title="Some accounts were skipped" />
            <InfoBar
                x:Name="OperationInfoBar"
                IsOpen="False"
                IsClosable="True"
                Severity="Error"
                Title="Operation failed" />
        </StackPanel>

        <!-- Account list -->
        <GridView x:Name="OtpGridView" Grid.Row="2" SelectionMode="None" HorizontalContentAlignment="Left" Padding="4,0,4,0">
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,4,0,4"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid x:Name="OtpItemsWrapGrid"
                                   Orientation="Horizontal"
                                   MaximumRowsOrColumns="1"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local:OtpAccount">
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Width="{StaticResource CardColumnWidth}"
                            MinHeight="120">
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Account label and delete button -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind DisplayLabel}"
                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           MaxWidth="200"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="4">
                                <Button Background="Transparent"
                                        BorderBrush="Transparent"
                                        Padding="8,4"
                                        MinWidth="0"
                                        Click="CopyButton_Click"
                                        Tag="{x:Bind Id}"
                                        ToolTipService.ToolTip="Copy TOTP code">
                                    <FontIcon x:Name="CopyButtonIcon" Glyph="&#xE8C8;" FontSize="14"/>
                                </Button>
                                <Button Background="Transparent"
                                        BorderBrush="Transparent"
                                        Padding="8,4"
                                        MinWidth="0"
                                        Click="DeleteButton_Click"
                                        Tag="{x:Bind Id}"
                                        ToolTipService.ToolTip="Delete account">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                </Button>
                            </StackPanel>

                            <!-- TOTP code and next code -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        Margin="0,8,0,0">
                                <TextBlock x:Name="CodeTextBlock"
                                           Style="{StaticResource TitleTextBlockStyle}"
                                           FontSize="28"
                                           FontFamily="Consolas"
                                           VerticalAlignment="Center"/>

                                <TextBlock x:Name="NextCodeTextBlock"
                                           FontSize="16"
                                           FontFamily="Consolas"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Opacity="0"/>
                            </StackPanel>

                            <!-- Progress bar and timer -->
                            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                  ColumnSpacing="8" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <!-- Custom progress bar (avoids WinUI3 animation bug) -->
                                <Grid Grid.Column="0" Height="4" VerticalAlignment="Center">
                                    <Rectangle Fill="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Stretch"
                                               RadiusX="2" RadiusY="2"/>
                                    <Rectangle x:Name="ProgressBarFill"
                                               Fill="{ThemeResource AccentFillColorDefaultBrush}"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Stretch"
                                               RadiusX="2" RadiusY="2"
                                               Width="0"/>
                                </Grid>
                                <TextBlock Grid.Column="1"
                                           x:Name="RemainingTextBlock"
                                           Style="{StaticResource BodyTextBlockStyle}"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Opacity="0.7"/>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <!-- Empty state -->
        <StackPanel
            x:Name="EmptyStatePanel"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="8">
            <FontIcon
                Glyph="&#xE8D7;"
                FontSize="48"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            <TextBlock
                Text="No OTP entries yet"
                Style="{StaticResource SubtitleTextBlockStyle}"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            <TextBlock
                Text="Click Add Account to get started"
                Style="{StaticResource BodyTextBlockStyle}"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
        </StackPanel>
    </Grid>

</Page>
