<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinOTP.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinOTP.Models">

    <Grid Padding="16,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sort and Add controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,0,0,8">
            <ComboBox x:Name="SortComboBox" SelectedIndex="0" SelectionChanged="SortComboBox_SelectionChanged">
                <ComboBoxItem>Date Added (Newest)</ComboBoxItem>
                <ComboBoxItem>Date Added (Oldest)</ComboBoxItem>
                <ComboBoxItem>Name (A → Z)</ComboBoxItem>
                <ComboBoxItem>Name (Z → A)</ComboBoxItem>
            </ComboBox>
            <Button x:Name="AddButton" Click="AddButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;" FontSize="14"/>
                    <TextBlock Text="Add Account"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="8" Margin="0,0,0,8">
            <InfoBar
                x:Name="LoadIssuesInfoBar"
                IsOpen="False"
                IsClosable="True"
                Severity="Warning"
                Title="Some accounts were skipped" />
            <InfoBar
                x:Name="OperationInfoBar"
                IsOpen="False"
                IsClosable="True"
                Severity="Error"
                Title="Operation failed" />
        </StackPanel>

        <!-- Account list -->
        <ListView x:Name="OtpListView" Grid.Row="2" SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0,4"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:OtpAccount">
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="16">
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Account label and delete button -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind DisplayLabel}"
                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="4">
                                <Button Background="Transparent"
                                        BorderBrush="Transparent"
                                        Padding="8,4"
                                        MinWidth="0"
                                        Click="CopyButton_Click"
                                        Tag="{x:Bind Id}"
                                        ToolTipService.ToolTip="Copy TOTP code">
                                    <FontIcon x:Name="CopyButtonIcon" Glyph="&#xE8C8;" FontSize="14"/>
                                </Button>
                                <Button Background="Transparent"
                                        BorderBrush="Transparent"
                                        Padding="8,4"
                                        MinWidth="0"
                                        Click="DeleteButton_Click"
                                        Tag="{x:Bind Id}"
                                        ToolTipService.ToolTip="Delete account">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                </Button>
                            </StackPanel>

                            <!-- TOTP code and progress -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                        Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                                <TextBlock x:Name="CodeTextBlock"
                                           Style="{StaticResource TitleTextBlockStyle}"
                                           FontSize="28"
                                           FontFamily="Consolas"
                                           VerticalAlignment="Center"/>
                                <ProgressBar x:Name="ProgressBar"
                                             Width="100"
                                             Height="4"
                                             VerticalAlignment="Center"
                                             Maximum="1"/>
                                <TextBlock x:Name="RemainingTextBlock"
                                           Style="{StaticResource BodyTextBlockStyle}"
                                           VerticalAlignment="Center"
                                           Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty state -->
        <StackPanel
            x:Name="EmptyStatePanel"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="8">
            <FontIcon
                Glyph="&#xE8D7;"
                FontSize="48"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            <TextBlock
                Text="No OTP entries yet"
                Style="{StaticResource SubtitleTextBlockStyle}"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            <TextBlock
                Text="Click Add Account to get started"
                Style="{StaticResource BodyTextBlockStyle}"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
        </StackPanel>
    </Grid>

</Page>
