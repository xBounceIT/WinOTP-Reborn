<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinOTP.Pages.ScreenCaptureOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Screen Capture">

    <Grid x:Name="RootGrid">
        <!-- Screenshot background -->
        <Image x:Name="ScreenshotImage" Stretch="Fill" />

        <!-- Dark overlay -->
        <Canvas x:Name="OverlayCanvas" Background="#80000000" />

        <!-- Instruction text -->
        <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,40,0,0"
            Padding="12,8"
            Background="#99000000">
            <TextBlock
                x:Name="InstructionText"
                Text="Click and drag to select a region. Press ESC to cancel."
                Foreground="White"
                FontSize="16" />
        </Border>
    </Grid>

</Window>
